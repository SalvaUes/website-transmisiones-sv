---
import Layout from '../layouts/Layout.astro';
import { Icon } from 'astro-icon/components';
---
<Layout 
    title="Contacto - Transmisiones Automáticas SV" 
    description="Contáctanos para cotizaciones, diagnósticos y servicios de transmisiones automáticas en El Salvador."
>
    <!-- Premium Hero Section -->
    <section class="hero-glass">
        <div class="glass-background"></div>
        <div class="hero-content animate-on-scroll">
            <h1 class="hero-title">
                <span class="title-main">Hablemos</span>
                <span class="title-accent">Sobre Tu Vehículo</span>
            </h1>
            <p class="hero-subtitle">¿Tienes una consulta o necesitas una cotización? Estamos aquí para brindarte la mejor solución.</p>
        </div>
    </section>

    <!-- Premium Contact Content -->
    <main class="content-container">
        <div class="contact-grid">
            <!-- Contact Info Premium Card -->
            <div class="contact-info-card animate-on-scroll">
                <div class="card-header">
                    <div class="header-icon">
                        <Icon name="mdi:map-marker" />
                    </div>
                    <h3>Información de Contacto</h3>
                </div>
                
                <div class="contact-item">
                    <div class="contact-icon">
                        <Icon name="mdi:map-marker-outline" />
                    </div>
                    <div class="contact-details">
                        <h4>Dirección</h4>
                        <p>Calle Ficticia #123<br>San Salvador, El Salvador</p>
                    </div>
                </div>

                <div class="contact-item">
                    <div class="contact-icon">
                        <Icon name="mdi:phone" />
                    </div>
                    <div class="contact-details">
                        <h4>Teléfono y WhatsApp</h4>
                        <p><a href="tel:+50377778888">+503 7777-8888</a></p>
                    </div>
                </div>

                <div class="contact-item">
                    <div class="contact-icon">
                        <Icon name="mdi:email-outline" />
                    </div>
                    <div class="contact-details">
                        <h4>Correo Electrónico</h4>
                        <p><a href="mailto:ventas@transmisionessv.com">ventas@transmisionessv.com</a></p>
                    </div>
                </div>

                <div class="hours-section">
                    <div class="contact-icon">
                        <Icon name="mdi:clock-outline" />
                    </div>
                    <div class="contact-details">
                        <h4>Horarios de Atención</h4>
                        <p>Lunes a Viernes: 8:00 AM - 6:00 PM<br>Sábados: 8:00 AM - 4:00 PM</p>
                    </div>
                </div>
            </div>

            <!-- Premium Contact Form -->
            <div class="contact-form-card animate-on-scroll">
                <div class="form-header">
                    <div class="header-icon">
                        <Icon name="mdi:message-text" />
                    </div>
                    <h3>Envíanos un Mensaje</h3>
                    <p>Completa el formulario y nos pondremos en contacto contigo pronto</p>
                </div>

                <form name="contacto" method="POST" action="/gracias" data-netlify="true" class="contact-form">
                    <input type="hidden" name="form-name" value="contacto" />
                    
                    <div class="form-group">
                        <label for="name">
                            <Icon name="mdi:account-outline" />
                            Nombre Completo
                        </label>
                        <input type="text" id="name" name="name" required placeholder="Tu nombre completo" />
                    </div>

                    <div class="form-group">
                        <label for="email">
                            <Icon name="mdi:email-outline" />
                            Correo Electrónico
                        </label>
                        <input type="email" id="email" name="email" required placeholder="tu@email.com" />
                    </div>

                    <div class="form-group">
                        <label for="phone">
                            <Icon name="mdi:phone-outline" />
                            Teléfono (Opcional)
                        </label>
                        <input type="tel" id="phone" name="phone" placeholder="+503 0000-0000" />
                    </div>

                    <div class="form-group">
                        <label for="service">
                            <Icon name="mdi:cog-outline" />
                            Servicio de Interés
                        </label>
                        <select id="service" name="service">
                            <option value="">Selecciona un servicio</option>
                            <option value="venta">Venta de Transmisiones</option>
                            <option value="instalacion">Instalación Profesional</option>
                            <option value="diagnostico">Diagnóstico por Computadora</option>
                            <option value="mantenimiento">Mantenimiento Preventivo</option>
                            <option value="domicilio">Servicio a Domicilio</option>
                            <option value="cotizacion">Cotización General</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label for="message">
                            <Icon name="mdi:message-outline" />
                            ¿En qué podemos ayudarte?
                        </label>
                        <textarea id="message" name="message" rows="5" required placeholder="Describe tu consulta o necesidad..."></textarea>
                    </div>

                    <button type="submit" class="btn-submit">
                        <span>Enviar Mensaje</span>
                        <Icon name="mdi:send" />
                    </button>
                </form>
            </div>
        </div>

        <!-- Premium CTA Section -->
        <section class="cta-section animate-on-scroll">
            <div class="cta-content">
                <h2>¿Prefieres Contactarnos Directamente?</h2>
                <p>También puedes llamarnos o escribirnos por WhatsApp para atención inmediata</p>
                <div class="cta-buttons">
                    <a href="tel:+50377778888" class="cta-button phone">
                        <Icon name="mdi:phone" />
                        <span>Llamar Ahora</span>
                    </a>
                    <a href="https://wa.me/50377778888" class="cta-button whatsapp" target="_blank">
                        <Icon name="mdi:whatsapp" />
                        <span>WhatsApp</span>
                    </a>
                </div>
            </div>
        </section>
    </main>
</Layout>

<style>
    /* ===== PREMIUM CONTACTO HERO ===== */
    .hero-glass {
        position: relative;
        min-height: 70vh;
        display: flex;
        align-items: center;
        justify-content: center;
        text-align: center;
        background: linear-gradient(135deg, 
            var(--bg-900) 0%, 
            var(--bg-800) 40%, 
            var(--bg-700) 100%);
        overflow: hidden;
        padding: var(--spacing-3xl) 0;
    }

    .glass-background {
        position: absolute;
        inset: 0;
        background: 
            radial-gradient(circle at 30% 70%, rgba(255,107,26,0.15) 0%, transparent 50%),
            radial-gradient(circle at 70% 30%, rgba(0,212,255,0.08) 0%, transparent 50%),
            radial-gradient(circle at 50% 50%, rgba(255,215,0,0.06) 0%, transparent 40%);
        animation: backgroundFloat 20s ease-in-out infinite;
    }

    @keyframes backgroundFloat {
        0%, 100% { 
            transform: translateY(0) rotate(0deg) scale(1);
            opacity: 0.8;
        }
        50% { 
            transform: translateY(-20px) rotate(1deg) scale(1.1);
            opacity: 1;
        }
    }

    .hero-content {
        position: relative;
        z-index: 2;
        padding: var(--spacing-3xl);
        max-width: 900px;
        margin: 0 auto;
        background: var(--glass-strong);
        backdrop-filter: blur(24px) saturate(1.4);
        border-radius: var(--radius-2xl);
        border: 1px solid var(--glass-border);
        box-shadow: var(--shadow-2xl), var(--glow-primary);
        animation: heroSlideIn 1.2s var(--ease-out) both;
    }

    @keyframes heroSlideIn {
        from {
            opacity: 0;
            transform: translateY(50px) scale(0.95);
        }
        to {
            opacity: 1;
            transform: translateY(0) scale(1);
        }
    }

    .hero-title {
        margin-bottom: var(--spacing-xl);
        font-family: 'Orbitron', sans-serif;
    }

    .title-main {
        display: block;
        font-size: clamp(2.5rem, 6vw, 4rem);
        font-weight: 300;
        color: var(--text-secondary);
        margin-bottom: var(--spacing-sm);
        letter-spacing: -0.02em;
    }

    .title-accent {
        display: block;
        font-size: clamp(3rem, 8vw, 5rem);
        font-weight: 800;
        background: var(--gradient-primary);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        text-shadow: var(--glow-primary);
        letter-spacing: -0.03em;
        animation: titleGlow 3s ease-in-out infinite;
    }

    @keyframes titleGlow {
        0%, 100% { 
            text-shadow: var(--glow-primary); 
        }
        50% { 
            text-shadow: 
                var(--glow-primary),
                0 0 40px rgba(255,107,26,0.5),
                0 0 80px rgba(255,107,26,0.3); 
        }
    }

    .hero-subtitle {
        font-size: clamp(1.1rem, 3vw, 1.4rem);
        color: var(--text-secondary);
        line-height: 1.7;
        animation: subtitleFadeIn 1.5s var(--ease-out) 0.3s both;
    }

    @keyframes subtitleFadeIn {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* ===== PREMIUM CONTENT CONTAINER ===== */
    .content-container {
        padding: var(--spacing-3xl) var(--spacing-md);
        max-width: 1400px;
        margin: 0 auto;
    }

    /* ===== PREMIUM CONTACT GRID ===== */
    .contact-grid {
        display: grid;
        grid-template-columns: 1fr 1.2fr;
        gap: var(--spacing-3xl);
        margin-bottom: var(--spacing-4xl);
    }

    /* ===== PREMIUM CONTACT INFO CARD ===== */
    .contact-info-card {
        position: relative;
        background: var(--glass-medium);
        backdrop-filter: blur(20px) saturate(1.3);
        border: 1px solid var(--glass-border);
        border-radius: var(--radius-2xl);
        padding: var(--spacing-3xl);
        box-shadow: var(--shadow-lg);
        animation: cardSlideIn 1s var(--ease-out) 0.2s both;
        overflow: hidden;
    }

    @keyframes cardSlideIn {
        from {
            opacity: 0;
            transform: translateX(-50px) scale(0.95);
        }
        to {
            opacity: 1;
            transform: translateX(0) scale(1);
        }
    }

    .contact-info-card::before {
        content: '';
        position: absolute;
        inset: 0;
        background: linear-gradient(135deg, 
            rgba(255,107,26,0.08) 0%, 
            transparent 50%, 
            rgba(0,212,255,0.04) 100%);
        opacity: 0.6;
        border-radius: var(--radius-2xl);
    }

    .card-header {
        position: relative;
        z-index: 2;
        display: flex;
        align-items: center;
        gap: var(--spacing-lg);
        margin-bottom: var(--spacing-2xl);
        padding-bottom: var(--spacing-lg);
        border-bottom: 1px solid var(--glass-border);
    }

    .header-icon {
        font-size: 2.5rem;
        color: var(--primary);
        padding: var(--spacing-md);
        background: var(--glass-light);
        border-radius: var(--radius-lg);
        border: 1px solid var(--glass-border);
        box-shadow: var(--glow-primary);
    }

    .card-header h3 {
        font-size: 1.5rem;
        font-weight: 700;
        color: var(--text-primary);
        font-family: 'Orbitron', sans-serif;
        background: var(--gradient-primary);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .contact-item,
    .hours-section {
        position: relative;
        z-index: 2;
        display: flex;
        align-items: flex-start;
        gap: var(--spacing-lg);
        margin-bottom: var(--spacing-xl);
        padding: var(--spacing-lg);
        background: var(--glass-light);
        border-radius: var(--radius-lg);
        border: 1px solid var(--glass-border);
        transition: all var(--motion-medium) var(--ease-out);
    }

    .contact-item:hover,
    .hours-section:hover {
        transform: translateX(8px);
        border-color: var(--border-accent);
        box-shadow: var(--shadow-md), var(--glow-primary);
    }

    .contact-icon {
        font-size: 1.5rem;
        color: var(--primary);
        padding: var(--spacing-sm);
        background: var(--glass-medium);
        border-radius: var(--radius-md);
        border: 1px solid var(--glass-border);
        flex-shrink: 0;
    }

    .contact-details h4 {
        font-size: 1.1rem;
        font-weight: 600;
        color: var(--text-primary);
        margin-bottom: var(--spacing-xs);
        font-family: 'Orbitron', sans-serif;
    }

    .contact-details p {
        color: var(--text-secondary);
        line-height: 1.6;
    }

    .contact-details a {
        color: var(--primary);
        text-decoration: none;
        font-weight: 600;
        transition: all var(--motion-fast) var(--ease-out);
    }

    .contact-details a:hover {
        color: var(--secondary);
        text-shadow: var(--glow-primary);
    }

    /* ===== PREMIUM CONTACT FORM CARD ===== */
    .contact-form-card {
        position: relative;
        background: var(--glass-medium);
        backdrop-filter: blur(20px) saturate(1.3);
        border: 1px solid var(--glass-border);
        border-radius: var(--radius-2xl);
        padding: var(--spacing-3xl);
        box-shadow: var(--shadow-lg);
        animation: cardSlideIn 1s var(--ease-out) 0.4s both;
        overflow: hidden;
    }

    .contact-form-card::before {
        content: '';
        position: absolute;
        inset: 0;
        background: linear-gradient(135deg, 
            rgba(0,212,255,0.06) 0%, 
            transparent 50%, 
            rgba(255,107,26,0.08) 100%);
        opacity: 0.6;
        border-radius: var(--radius-2xl);
    }

    .form-header {
        position: relative;
        z-index: 2;
        display: flex;
        align-items: center;
        gap: var(--spacing-lg);
        margin-bottom: var(--spacing-2xl);
        padding-bottom: var(--spacing-lg);
        border-bottom: 1px solid var(--glass-border);
        flex-direction: column;
        text-align: center;
    }

    .form-header h3 {
        font-size: 1.5rem;
        font-weight: 700;
        color: var(--text-primary);
        font-family: 'Orbitron', sans-serif;
        background: var(--gradient-primary);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        margin-bottom: var(--spacing-sm);
    }

    .form-header p {
        color: var(--text-secondary);
        font-size: 0.95rem;
    }

    /* ===== PREMIUM FORM STYLES ===== */
    .contact-form {
        position: relative;
        z-index: 2;
    }

    .form-group {
        margin-bottom: var(--spacing-xl);
    }

    .form-group label {
        display: flex;
        align-items: center;
        gap: var(--spacing-sm);
        margin-bottom: var(--spacing-sm);
        color: var(--text-primary);
        font-weight: 600;
        font-size: 0.95rem;
    }

    .form-group label :global(.astro-icon) {
        color: var(--primary);
        font-size: 1.2rem;
    }

    .form-group input,
    .form-group textarea,
    .form-group select {
        width: 100%;
        padding: var(--spacing-md) var(--spacing-lg);
        background: var(--glass-light);
        backdrop-filter: blur(12px) saturate(1.2);
        border: 1px solid var(--glass-border);
        border-radius: var(--radius-lg);
        color: var(--text-primary);
        font-size: 1rem;
        transition: all var(--motion-medium) var(--ease-out);
        font-family: inherit;
    }

    .form-group input::placeholder,
    .form-group textarea::placeholder {
        color: var(--text-muted);
    }

    .form-group input:focus,
    .form-group textarea:focus,
    .form-group select:focus {
        outline: none;
        border-color: var(--border-accent);
        box-shadow: 0 0 0 3px rgba(255,107,26,0.2), var(--glow-primary);
        transform: translateY(-2px);
    }

    .form-group textarea {
        resize: vertical;
        min-height: 120px;
    }

    .form-group select {
        cursor: pointer;
    }

    /* ===== PREMIUM SUBMIT BUTTON ===== */
    .btn-submit {
        position: relative;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: var(--spacing-md);
        width: 100%;
        padding: var(--spacing-lg) var(--spacing-2xl);
        background: var(--gradient-primary);
        color: var(--bg-900);
        border: none;
        border-radius: var(--radius-lg);
        font-size: 1.1rem;
        font-weight: 700;
        font-family: 'Orbitron', sans-serif;
        cursor: pointer;
        transition: all var(--motion-medium) var(--ease-out);
        box-shadow: var(--shadow-lg), var(--glow-primary);
        overflow: hidden;
        letter-spacing: 0.01em;
    }

    .btn-submit::after {
        content: '';
        position: absolute;
        inset: 0;
        background: linear-gradient(45deg, 
            transparent 30%, 
            rgba(255,255,255,0.3) 50%, 
            transparent 70%);
        transform: translateX(-100%) skewX(-15deg);
        transition: transform var(--motion-slow) var(--ease-out);
    }

    .btn-submit:hover {
        transform: translateY(-4px) scale(1.02);
        box-shadow: var(--shadow-2xl), var(--glow-secondary);
    }

    .btn-submit:hover::after {
        transform: translateX(200%) skewX(-15deg);
    }

    .btn-submit:active {
        transform: translateY(-2px) scale(1.01);
    }

    .btn-submit :global(.astro-icon) {
        transition: transform var(--motion-medium) var(--ease-out);
    }

    .btn-submit:hover :global(.astro-icon) {
        transform: translateX(4px) rotate(15deg);
    }

    /* ===== PREMIUM CTA SECTION ===== */
    .cta-section {
        text-align: center;
        padding: var(--spacing-4xl);
        background: var(--glass-light);
        backdrop-filter: blur(16px) saturate(1.2);
        border-radius: var(--radius-2xl);
        border: 1px solid var(--glass-border);
        box-shadow: var(--shadow-lg);
        animation: ctaSlideIn 1s var(--ease-out) 0.6s both;
    }

    @keyframes ctaSlideIn {
        from {
            opacity: 0;
            transform: translateY(40px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .cta-content h2 {
        font-size: clamp(1.8rem, 4vw, 2.5rem);
        font-weight: 700;
        color: var(--text-primary);
        margin-bottom: var(--spacing-lg);
        font-family: 'Orbitron', sans-serif;
        background: var(--gradient-primary);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        letter-spacing: -0.01em;
    }

    .cta-content p {
        color: var(--text-secondary);
        margin-bottom: var(--spacing-2xl);
        font-size: 1.1rem;
        line-height: 1.6;
    }

    .cta-buttons {
        display: flex;
        gap: var(--spacing-xl);
        justify-content: center;
        flex-wrap: wrap;
    }

    .cta-button {
        position: relative;
        display: flex;
        align-items: center;
        gap: var(--spacing-md);
        padding: var(--spacing-lg) var(--spacing-2xl);
        border-radius: var(--radius-lg);
        text-decoration: none;
        font-weight: 700;
        font-size: 1rem;
        transition: all var(--motion-medium) var(--ease-out);
        box-shadow: var(--shadow-md);
        overflow: hidden;
        font-family: 'Orbitron', sans-serif;
        letter-spacing: 0.01em;
    }

    .cta-button.phone {
        background: var(--gradient-primary);
        color: var(--bg-900);
        box-shadow: var(--shadow-md), var(--glow-primary);
    }

    .cta-button.whatsapp {
        background: linear-gradient(135deg, #25D366, #128C7E);
        color: white;
        box-shadow: var(--shadow-md), 0 0 20px rgba(37,211,102,0.3);
    }

    .cta-button:hover {
        transform: translateY(-4px) scale(1.05);
        box-shadow: var(--shadow-xl);
    }

    .cta-button.phone:hover {
        box-shadow: var(--shadow-xl), var(--glow-secondary);
    }

    .cta-button.whatsapp:hover {
        box-shadow: var(--shadow-xl), 0 0 30px rgba(37,211,102,0.5);
    }

    .cta-button :global(.astro-icon) {
        font-size: 1.3rem;
        transition: transform var(--motion-medium) var(--ease-out);
    }

    .cta-button:hover :global(.astro-icon) {
        transform: scale(1.2) rotate(10deg);
    }

    /* ===== SCROLL ANIMATIONS ===== */
    .animate-on-scroll {
        opacity: 0;
        transform: translateY(50px);
        transition: all var(--motion-slow) var(--ease-out);
    }

    .animate-on-scroll.animate {
        opacity: 1;
        transform: translateY(0);
    }

    /* ===== RESPONSIVE OPTIMIZATIONS ===== */
    @media (max-width: 1024px) {
        .contact-grid {
            grid-template-columns: 1fr;
            gap: var(--spacing-2xl);
        }
    }

    @media (max-width: 768px) {
        .hero-glass {
            min-height: 60vh;
            padding: var(--spacing-2xl) 0;
        }
        
        .hero-content {
            padding: var(--spacing-2xl);
            margin: 0 var(--spacing-md);
        }
        
        .content-container {
            padding: var(--spacing-2xl) var(--spacing-md);
        }
        
        .contact-info-card,
        .contact-form-card {
            padding: var(--spacing-2xl);
        }

        .card-header,
        .form-header {
            flex-direction: column;
            text-align: center;
            gap: var(--spacing-md);
        }

        .contact-item,
        .hours-section {
            flex-direction: column;
            text-align: center;
            gap: var(--spacing-md);
        }

        .cta-buttons {
            flex-direction: column;
            align-items: center;
            gap: var(--spacing-lg);
        }

        .cta-button {
            width: 100%;
            max-width: 280px;
            justify-content: center;
        }
    }

    @media (max-width: 480px) {
        .hero-content {
            padding: var(--spacing-xl);
            margin: 0 var(--spacing-sm);
        }

        .contact-info-card,
        .contact-form-card {
            padding: var(--spacing-xl);
        }

        .cta-section {
            padding: var(--spacing-2xl);
        }

        .header-icon {
            font-size: 2rem;
            padding: var(--spacing-sm);
        }
    }

    /* ===== ACCESIBILIDAD Y PREFERENCIAS ===== */
    @media (prefers-reduced-motion: reduce) {
        .glass-background,
        .hero-content,
        .contact-info-card,
        .contact-form-card,
        .cta-section,
        .animate-on-scroll,
        .title-accent {
            animation: none;
            transition: none;
        }
        
        .animate-on-scroll {
            opacity: 1;
            transform: none;
        }

        .contact-item:hover,
        .hours-section:hover {
            transform: translateX(4px);
        }

        .btn-submit:hover,
        .cta-button:hover {
            transform: translateY(-2px);
        }
    }

    /* ===== PERFORMANCE OPTIMIZATIONS ===== */
    .glass-background {
        will-change: transform;
        transform: translateZ(0);
    }

    .contact-info-card,
    .contact-form-card,
    .btn-submit,
    .cta-button {
        will-change: transform;
    }
</style>

<script>
// ===== PREMIUM CONTACTO EFFECTS =====

// ===== SCROLL ANIMATIONS =====
function setupScrollAnimations() {
    const animatedElements = document.querySelectorAll('.animate-on-scroll');
    
    const scrollObserver = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
            if (entry.isIntersecting) {
                entry.target.classList.add('animate');
                scrollObserver.unobserve(entry.target);
            }
        });
    }, {
        threshold: 0.1,
        rootMargin: '0px 0px -50px 0px'
    });

    animatedElements.forEach(element => {
        scrollObserver.observe(element);
    });
}

// ===== HERO PARALLAX EFFECTS =====
function setupHeroParallax() {
    const hero = document.querySelector('.hero-glass') as HTMLElement | null;
    const glassBackground = document.querySelector('.glass-background') as HTMLElement | null;
    
    if (!hero || !glassBackground) return;

    let ticking = false;
    
    const handleScroll = () => {
        if (!ticking) {
            requestAnimationFrame(() => {
                const scrollY = window.scrollY;
                const heroHeight = hero.offsetHeight;
                const scrollPercent = Math.min(scrollY / heroHeight, 1);
                
                // Parallax effect for background
                const translateY = scrollY * 0.5;
                if (glassBackground) glassBackground.style.transform = `translateY(${translateY}px)`;
                
                // Opacity fade effect
                const opacity = Math.max(0.3, 1 - scrollPercent * 0.7);
                if (hero) hero.style.opacity = opacity.toString();
                
                ticking = false;
            });
            ticking = true;
        }
    };

    window.addEventListener('scroll', handleScroll, { passive: true });
}

// ===== FORM ENHANCEMENTS =====
function setupFormEnhancements() {
    const form = document.querySelector('.contact-form') as HTMLFormElement | null;
    const submitButton = document.querySelector('.btn-submit') as HTMLElement | null;
    
    if (!form || !submitButton) return;

    // Form validation and submission
    form.addEventListener('submit', (e: SubmitEvent) => {
        // Add loading state
        if (submitButton) {
            submitButton.style.transform = 'scale(0.98)';
            submitButton.innerHTML = `
            <span>Enviando...</span>
            <svg style="animation: spin 1s linear infinite;" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M21 12a9 9 0 11-6.219-8.56"/>
            </svg>
            `;
        }
        
        // Reset button after 2 seconds (for demo)
        setTimeout(() => {
            if (submitButton) submitButton.style.transform = 'scale(1)';
        }, 100);
    });

    // Enhanced input focus effects
    const inputs = document.querySelectorAll('.form-group input, .form-group textarea, .form-group select');
    
    inputs.forEach(input => {
        input.addEventListener('focus', () => {
            const formGroup = input.closest('.form-group') as HTMLElement | null;
            if (formGroup) {
                formGroup.style.transform = 'translateY(-2px)';
            }
        });
        
        input.addEventListener('blur', () => {
            const formGroup = input.closest('.form-group') as HTMLElement | null;
            if (formGroup) {
                formGroup.style.transform = 'translateY(0)';
            }
        });
    });
}

// ===== RIPPLE EFFECTS =====
function setupRippleEffects() {
    const buttons = document.querySelectorAll('.btn-submit, .cta-button');
    
    buttons.forEach(button => {
        button.addEventListener('click', (e) => {
            createRipple(e as MouseEvent, button as HTMLElement);
        });
    });
}

function createRipple(event: MouseEvent, element: HTMLElement) {
    const rect = element.getBoundingClientRect();
    const size = Math.max(rect.width, rect.height);
    const x = event.clientX - rect.left - size / 2;
    const y = event.clientY - rect.top - size / 2;
    
    const ripple = document.createElement('span');
    ripple.className = 'ripple-effect';
    ripple.style.cssText = `
        position: absolute;
        width: ${size}px;
        height: ${size}px;
        left: ${x}px;
        top: ${y}px;
        background: radial-gradient(circle, rgba(255,255,255,0.3) 0%, transparent 70%);
        border-radius: 50%;
        transform: scale(0);
        animation: rippleAnimation 0.6s ease-out;
        pointer-events: none;
        z-index: 1;
    `;
    
    // Ensure relative positioning
    if (getComputedStyle(element).position === 'static') {
        element.style.position = 'relative';
    }
    
    element.appendChild(ripple);
    
    // Remove ripple after animation
    setTimeout(() => {
        if (ripple.parentNode) {
            ripple.parentNode.removeChild(ripple);
        }
    }, 600);
}

// ===== CONTACT CARD HOVER EFFECTS =====
function setupCardEffects() {
    const cards = document.querySelectorAll('.contact-info-card, .contact-form-card');
    
    cards.forEach(card => {
        card.addEventListener('mouseenter', () => {
            (card as HTMLElement).style.transform = 'translateY(-8px) scale(1.02)';
        });
        
        card.addEventListener('mouseleave', () => {
            (card as HTMLElement).style.transform = 'translateY(0) scale(1)';
        });
    });
}

// ===== TYPING EFFECT FOR PLACEHOLDERS =====
function setupTypingEffect() {
    const textArea = document.querySelector('#message') as HTMLTextAreaElement | null;
    if (!textArea) return;
    
    const originalPlaceholder = textArea.placeholder;
    const messages = [
        'Describe tu consulta o necesidad...',
        'Cuéntanos sobre tu vehículo...',
        '¿Qué problema tienes con tu transmisión?',
        'Necesito información sobre...'
    ];
    
    let currentMessageIndex = 0;
    
    const typeMessage = (message: string, element: HTMLTextAreaElement) => {
        element.placeholder = '';
        let i = 0;
        
        const typing = setInterval(() => {
            element.placeholder += message[i];
            i++;
            
            if (i >= message.length) {
                clearInterval(typing);
                setTimeout(() => {
                    currentMessageIndex = (currentMessageIndex + 1) % messages.length;
                    setTimeout(() => typeMessage(messages[currentMessageIndex], element), 500);
                }, 3000);
            }
        }, 100);
    };
    
    // Start typing effect
    setTimeout(() => typeMessage(messages[0], textArea), 2000);
}

