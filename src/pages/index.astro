---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
import FadeIn from '../components/FadeIn.tsx';
import { client } from '../utils/sanityClient';
import type { Transmision } from '../types/sanity';

const query = `*[_type == "transmision"]{_id, marca, modelo, precio, condicion, foto, slug}`;
const transmisiones: Transmision[] = await client.fetch(query);
---

<Layout 
  title="Catálogo - Transmisiones Automáticas SV"
  description="Encuentra transmisiones automáticas nuevas, usadas y reconstruidas para todas las marcas de vehículos en El Salvador. Garantía de hasta 12 meses."
>
  <main class="container">
    <section class="hero">
      <h1 class="hero-title">
        <span>Transmisiones Automáticas SV</span>
      </h1>
      <p class="hero-subtitle">
        Confianza y Rendimiento Garantizado. Descubre nuestra selección de transmisiones con el respaldo de expertos en El Salvador.
      </p>
    </section>

    <div class="catalogo-grid">
      {transmisiones.map((transmision) => (
        <FadeIn client:visible>
          <Card transmision={transmision} />
        </FadeIn>
      ))}
    </div>
  </main>
</Layout>

<style>
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem;
  }
  .hero {
    text-align: center;
    padding: 4rem 0;
    border-bottom: 1px solid var(--color-borde);
    margin-bottom: 4rem;
  }
  .hero-title {
    font-size: 3.5rem;
    color: var(--color-texto-principal);
    margin-bottom: 1rem;
    text-transform: uppercase;
  }
  .hero-subtitle {
    font-size: 1.2rem;
    color: var(--color-texto-secundario);
    max-width: 700px;
    margin: 0 auto;
    line-height: 1.6;
  }
  .catalogo-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: 2rem;
  }
</style>