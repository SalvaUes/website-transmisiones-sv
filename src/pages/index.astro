---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
// ¡CAMBIO AQUÍ! Importamos el nuevo componente .tsx
import FadeIn from '../components/FadeIn.tsx'; 
import { client } from '../utils/sanityClient';
import type { Transmision } from '../types/sanity';

// El resto del código frontmatter queda exactamente igual
const query = `*[_type == "transmision"]{_id, marca, modelo, precio, condicion, foto, slug}`;
const transmisiones: Transmision[] = await client.fetch(query);
---

<Layout 
  title="Catálogo - Transmisiones Automáticas SV"
  description="Encuentra transmisiones automáticas nuevas, usadas y reconstruidas para todas las marcas de vehículos en El Salvador. Garantía de hasta 12 meses."
>
  <main class="container">
    <section class="hero">
      <h1 class="hero-title">
        <span>El Corazón de tu Vehículo,</span>
        <span>Con la Confianza que Mereces.</span>
      </h1>
      <p class="hero-subtitle">
        Descubre nuestra amplia selección de transmisiones automáticas, con garantía y el respaldo de expertos en El Salvador.
      </p>
    </section>

    <div class="catalogo-grid">
      {transmisiones.map((transmision) => (
        <FadeIn>
          <Card transmision={transmision} />
        </FadeIn>
      ))}
    </div>

    <div class="call-to-action">
      <FadeIn>
        <p>¿No encuentras lo que buscas? ¡Contáctanos hoy mismo para una asesoría personalizada!</p>
        <a href="/contacto" class="btn">Contactar a un Experto</a>
      </FadeIn>
    </div>
  </main>
</Layout>