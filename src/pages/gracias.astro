---
import Layout from '../layouts/Layout.astro';
import { Icon } from 'astro-icon/components';
---

<Layout title="Mensaje Enviado - Transmisiones Automáticas SV">
  <main class="container">
    <div class="success-box">
      <Icon name="mdi:check-circle-outline" class="success-icon" />
      <h1>¡Gracias por contactarnos!</h1>
      <p>Hemos recibido tu mensaje y nos pondremos en contacto contigo a la brevedad.</p>
      <a href="/" class="btn">Volver al Inicio</a>
    </div>
  </main>
</Layout>

<style>
  .container {
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 60vh;
    padding: 2rem;
  }
  .success-box {
    background-color: var(--color-superficie);
    padding: 3rem 4rem;
    border-radius: 12px;
    border: 1px solid var(--color-borde);
    text-align: center;
    max-width: 500px;
  }
  .success-icon {
    font-size: 5rem;
    color: #4caf50; /* Un verde de éxito */
  }
  h1 {
    font-size: 2rem;
    color: white;
    margin: 1.5rem 0 0.5rem;
  }
  p {
    font-size: 1.1rem;
    color: var(--color-texto-secundario);
    margin-bottom: 2rem;
  }
</style>