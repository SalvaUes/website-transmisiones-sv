---
import Layout from '../layouts/Layout.astro';
import { Icon } from 'astro-icon/components';
---
<Layout 
    title="Sobre Nosotros - Transmisiones Automáticas SV"
    description="Conoce nuestra historia. Expertos en transmisiones con 15+ años en El Salvador."
>
    <!-- Hero Glassmorphism -->
    <section class="hero-glass">
        <div class="glass-background"></div>
        <div class="hero-content animate-on-scroll">
            <h1 class="hero-title">
                <span class="title-primary">Expertos</span>
                <span class="title-secondary">en los que puedes confiar</span>
            </h1>
            <p class="hero-subtitle">15+ años restaurando el corazón de tu vehículo</p>
        </div>
    </section>

    <!-- Content with Stagger Animations -->
    <main class="content-container">
        <!-- Historia Section -->
        <section class="story-section animate-on-scroll">
            <div class="story-card">
                <div class="story-icon">
                    <Icon name="mdi:clock-outline" />
                </div>
                <div class="story-content">
                    <h2>Nuestra Historia</h2>
                    <p>
                        Transmisiones Automáticas SV nació de una pasión por la mecánica de precisión. 
                        Fundada en 2008, comenzamos como un pequeño taller y hoy somos el referente 
                        en El Salvador con más de 500 transmisiones reparadas.
                    </p>
                </div>
            </div>
        </section>

        <!-- Misión Section -->
        <section class="mission-section animate-on-scroll">
            <div class="mission-card">
                <div class="mission-icon">
                    <Icon name="mdi:target" />
                </div>
                <div class="mission-content">
                    <h2>Nuestra Misión</h2>
                    <p>
                        Devolverle a cada cliente la tranquilidad y confianza en su vehículo mediante 
                        productos de alta calidad, servicio técnico impecable y la mejor garantía del mercado.
                    </p>
                </div>
            </div>
        </section>

        <!-- Stats Grid -->
        <section class="stats-section animate-on-scroll">
            <div class="stats-grid">
                <div class="stat-item">
                    <div class="stat-icon">
                        <Icon name="mdi:calendar-today" />
                    </div>
                    <div class="stat-number" data-count="15">0</div>
                    <div class="stat-label">Años de Experiencia</div>
                </div>
                <div class="stat-item">
                    <div class="stat-icon">
                        <Icon name="mdi:cog" />
                    </div>
                    <div class="stat-number" data-count="500">0</div>
                    <div class="stat-label">Transmisiones Reparadas</div>
                </div>
                <div class="stat-item">
                    <div class="stat-icon">
                        <Icon name="mdi:shield-check" />
                    </div>
                    <div class="stat-number">100%</div>
                    <div class="stat-label">Clientes Satisfechos</div>
                </div>
            </div>
        </section>

        <!-- Features -->
        <section class="features-section animate-on-scroll">
            <div class="features-grid">
                <div class="feature-card">
                    <Icon name="mdi:shield-check" />
                    <span>Garantía Extendida</span>
                </div>
                <div class="feature-card">
                    <Icon name="mdi:wrench" />
                    <span>Técnicos Certificados</span>
                </div>
                <div class="feature-card">
                    <Icon name="mdi:truck" />
                    <span>Atención Domicilio</span>
                </div>
            </div>
        </section>
    </main>
</Layout>

<style>
    /* ===== PREMIUM NOSOTROS HERO ===== */
    .hero-glass {
        position: relative;
        min-height: 70vh;
        display: flex;
        align-items: center;
        justify-content: center;
        text-align: center;
        background: linear-gradient(135deg, 
            var(--bg-900) 0%, 
            var(--bg-800) 40%, 
            var(--bg-700) 100%);
        overflow: hidden;
        padding: var(--spacing-3xl) 0;
    }

    .glass-background {
        position: absolute;
        inset: 0;
        background: 
            radial-gradient(circle at 20% 80%, rgba(255,107,26,0.15) 0%, transparent 50%),
            radial-gradient(circle at 80% 20%, rgba(0,212,255,0.08) 0%, transparent 50%),
            radial-gradient(circle at 50% 50%, rgba(255,215,0,0.06) 0%, transparent 40%);
        animation: backgroundFloat 20s ease-in-out infinite;
    }

    @keyframes backgroundFloat {
        0%, 100% { 
            transform: translateY(0) rotate(0deg) scale(1);
            opacity: 0.8;
        }
        50% { 
            transform: translateY(-20px) rotate(1deg) scale(1.1);
            opacity: 1;
        }
    }

    .hero-content {
        position: relative;
        z-index: 2;
        padding: var(--spacing-3xl);
        max-width: 900px;
        margin: 0 auto;
        background: var(--glass-strong);
        backdrop-filter: blur(24px) saturate(1.4);
        border-radius: var(--radius-2xl);
        border: 1px solid var(--glass-border);
        box-shadow: var(--shadow-2xl), var(--glow-primary);
        animation: heroSlideIn 1.2s var(--ease-out) both;
    }

    @keyframes heroSlideIn {
        from {
            opacity: 0;
            transform: translateY(50px) scale(0.95);
        }
        to {
            opacity: 1;
            transform: translateY(0) scale(1);
        }
    }

    .hero-title {
        margin-bottom: var(--spacing-xl);
        font-family: 'Orbitron', sans-serif;
    }

    .title-primary {
        display: block;
        font-size: clamp(2.5rem, 8vw, 4.5rem);
        font-weight: 800;
        background: var(--gradient-primary);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        text-shadow: var(--glow-primary);
        margin-bottom: var(--spacing-sm);
        letter-spacing: -0.02em;
        animation: titleGlow 3s ease-in-out infinite;
    }

    @keyframes titleGlow {
        0%, 100% { 
            text-shadow: var(--glow-primary); 
        }
        50% { 
            text-shadow: 
                var(--glow-primary),
                0 0 40px rgba(255,107,26,0.5),
                0 0 80px rgba(255,107,26,0.3); 
        }
    }

    .title-secondary {
        display: block;
        font-size: clamp(1.5rem, 4vw, 2.8rem);
        font-weight: 300;
        color: var(--text-secondary);
        letter-spacing: -0.01em;
    }

    .hero-subtitle {
        font-size: clamp(1.1rem, 3vw, 1.4rem);
        color: var(--text-secondary);
        margin-bottom: var(--spacing-2xl);
        line-height: 1.7;
        animation: subtitleFadeIn 1.5s var(--ease-out) 0.3s both;
    }

    @keyframes subtitleFadeIn {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* ===== PREMIUM CONTENT CONTAINER ===== */
    .content-container {
        padding: var(--spacing-3xl) var(--spacing-md);
        max-width: 1400px;
        margin: 0 auto;
    }

    /* ===== PREMIUM STORY & MISSION CARDS ===== */
    .story-section,
    .mission-section {
        margin-bottom: var(--spacing-3xl);
        animation: sectionSlideIn 1s var(--ease-out) both;
    }

    .story-section {
        animation-delay: 0.2s;
    }

    .mission-section {
        animation-delay: 0.4s;
    }

    @keyframes sectionSlideIn {
        from {
            opacity: 0;
            transform: translateY(40px) scale(0.95);
        }
        to {
            opacity: 1;
            transform: translateY(0) scale(1);
        }
    }

    .story-card,
    .mission-card {
        position: relative;
        background: var(--glass-medium);
        backdrop-filter: blur(20px) saturate(1.3);
        border: 1px solid var(--glass-border);
        border-radius: var(--radius-2xl);
        padding: var(--spacing-3xl);
        display: flex;
        align-items: flex-start;
        gap: var(--spacing-2xl);
        transition: all var(--motion-medium) var(--ease-out);
        overflow: hidden;
        box-shadow: var(--shadow-lg);
    }

    .story-card::before,
    .mission-card::before {
        content: '';
        position: absolute;
        inset: 0;
        background: linear-gradient(135deg, 
            rgba(255,107,26,0.1) 0%, 
            transparent 50%, 
            rgba(0,212,255,0.05) 100%);
        opacity: 0;
        transition: opacity var(--motion-medium) var(--ease-out);
        border-radius: var(--radius-2xl);
    }

    .story-card:hover,
    .mission-card:hover {
        transform: translateY(-12px) scale(1.02);
        border-color: var(--border-accent);
        box-shadow: var(--shadow-2xl), var(--glow-primary);
    }

    .story-card:hover::before,
    .mission-card:hover::before {
        opacity: 1;
    }

    .story-icon,
    .mission-icon {
        font-size: 3.5rem;
        color: var(--primary);
        flex-shrink: 0;
        padding: var(--spacing-lg);
        background: var(--glass-light);
        border-radius: var(--radius-xl);
        border: 1px solid var(--glass-border);
        box-shadow: var(--glow-primary);
        transition: all var(--motion-medium) var(--ease-out);
    }

    .story-card:hover .story-icon,
    .mission-card:hover .mission-icon {
        transform: scale(1.1) rotate(5deg);
        box-shadow: var(--glow-secondary);
    }

    .story-content h2,
    .mission-content h2 {
        font-size: clamp(1.5rem, 4vw, 2.2rem);
        font-weight: 700;
        color: var(--text-primary);
        margin-bottom: var(--spacing-lg);
        font-family: 'Orbitron', sans-serif;
        background: var(--gradient-primary);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        letter-spacing: -0.01em;
    }

    .story-content p,
    .mission-content p {
        color: var(--text-secondary);
        line-height: 1.8;
        font-size: 1.1rem;
    }

    /* ===== PREMIUM STATS SECTION ===== */
    .stats-section {
        margin: var(--spacing-4xl) 0;
        animation: statsSlideIn 1s var(--ease-out) 0.6s both;
    }

    @keyframes statsSlideIn {
        from {
            opacity: 0;
            transform: translateY(50px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .stats-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: var(--spacing-2xl);
    }

    .stat-item {
        position: relative;
        background: var(--glass-medium);
        backdrop-filter: blur(16px) saturate(1.2);
        border: 1px solid var(--glass-border);
        border-radius: var(--radius-2xl);
        padding: var(--spacing-3xl);
        text-align: center;
        transition: all var(--motion-medium) var(--ease-out);
        overflow: hidden;
        box-shadow: var(--shadow-lg);
        animation: statSlideIn 1s var(--ease-out) both;
    }

    .stat-item:nth-child(1) { animation-delay: 0.8s; }
    .stat-item:nth-child(2) { animation-delay: 1s; }
    .stat-item:nth-child(3) { animation-delay: 1.2s; }

    @keyframes statSlideIn {
        from {
            opacity: 0;
            transform: translateY(40px) scale(0.9);
        }
        to {
            opacity: 1;
            transform: translateY(0) scale(1);
        }
    }

    .stat-item::before {
        content: '';
        position: absolute;
        inset: 0;
        background: radial-gradient(circle, var(--primary), transparent);
        opacity: 0;
        transition: opacity var(--motion-medium) var(--ease-out);
        border-radius: var(--radius-2xl);
    }

    .stat-item:hover {
        transform: translateY(-15px) scale(1.05);
        border-color: var(--border-accent);
        box-shadow: var(--shadow-2xl), var(--glow-primary);
    }

    .stat-item:hover::before {
        opacity: 0.15;
        animation: statGlow 2s ease-in-out infinite;
    }

    @keyframes statGlow {
        0%, 100% { opacity: 0.15; }
        50% { opacity: 0.25; }
    }

    .stat-icon {
        font-size: 3.5rem;
        color: var(--primary);
        margin-bottom: var(--spacing-lg);
        padding: var(--spacing-lg);
        background: var(--glass-light);
        border-radius: var(--radius-xl);
        border: 1px solid var(--glass-border);
        display: inline-flex;
        align-items: center;
        justify-content: center;
        box-shadow: var(--glow-primary);
        transition: transform var(--motion-medium) var(--ease-out);
    }

    .stat-item:hover .stat-icon {
        transform: scale(1.2) rotate(10deg);
    }

    .stat-number {
        font-size: clamp(2.5rem, 5vw, 3.5rem);
        font-weight: 800;
        background: var(--gradient-primary);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        font-family: 'Orbitron', sans-serif;
        text-shadow: var(--glow-primary);
        margin-bottom: var(--spacing-md);
        line-height: 1;
        display: block;
    }

    .stat-label {
        color: var(--text-muted);
        font-size: 1rem;
        text-transform: uppercase;
        letter-spacing: 0.1em;
        font-weight: 600;
    }
    /* ===== PREMIUM FEATURES SECTION ===== */
    .features-section {
        margin: var(--spacing-4xl) 0;
        animation: featuresSlideIn 1s var(--ease-out) 1.4s both;
    }

    @keyframes featuresSlideIn {
        from {
            opacity: 0;
            transform: translateY(50px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .features-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: var(--spacing-2xl);
    }

    .feature-card {
        position: relative;
        background: var(--glass-medium);
        backdrop-filter: blur(16px) saturate(1.2);
        border: 1px solid var(--glass-border);
        border-radius: var(--radius-xl);
        padding: var(--spacing-2xl);
        display: flex;
        align-items: center;
        gap: var(--spacing-lg);
        transition: all var(--motion-medium) var(--ease-out);
        overflow: hidden;
        box-shadow: var(--shadow-md);
        animation: featureSlideIn 1s var(--ease-out) both;
    }

    .feature-card:nth-child(1) { animation-delay: 1.6s; }
    .feature-card:nth-child(2) { animation-delay: 1.8s; }
    .feature-card:nth-child(3) { animation-delay: 2s; }

    @keyframes featureSlideIn {
        from {
            opacity: 0;
            transform: translateX(-30px) scale(0.9);
        }
        to {
            opacity: 1;
            transform: translateX(0) scale(1);
        }
    }

    .feature-card::before {
        content: '';
        position: absolute;
        inset: 0;
        background: linear-gradient(135deg, 
            rgba(255,107,26,0.08) 0%, 
            transparent 50%, 
            rgba(0,212,255,0.04) 100%);
        opacity: 0;
        transition: opacity var(--motion-medium) var(--ease-out);
        border-radius: var(--radius-xl);
    }

    .feature-card:hover {
        transform: translateX(10px) scale(1.02);
        border-color: var(--border-accent);
        box-shadow: var(--shadow-xl), var(--glow-primary);
    }

    .feature-card:hover::before {
        opacity: 1;
    }

    .feature-card :global(.astro-icon) {
        font-size: 2.5rem;
        color: var(--primary);
        flex-shrink: 0;
        padding: var(--spacing-md);
        background: var(--glass-light);
        border-radius: var(--radius-lg);
        border: 1px solid var(--glass-border);
        box-shadow: var(--glow-primary);
        transition: all var(--motion-medium) var(--ease-out);
    }

    .feature-card:hover :global(.astro-icon) {
        transform: scale(1.1) rotate(5deg);
        box-shadow: var(--glow-secondary);
    }

    .feature-card span {
        color: var(--text-primary);
        font-weight: 600;
        font-size: 1.1rem;
        font-family: 'Orbitron', sans-serif;
        letter-spacing: -0.01em;
    }

    /* ===== SCROLL ANIMATIONS ===== */
    .animate-on-scroll {
        opacity: 0;
        transform: translateY(50px);
        transition: all var(--motion-slow) var(--ease-out);
    }

    .animate-on-scroll.animate {
        opacity: 1;
        transform: translateY(0);
    }

    /* ===== RESPONSIVE OPTIMIZATIONS ===== */
    @media (max-width: 1024px) {
        .stats-grid {
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: var(--spacing-xl);
        }
        
        .features-grid {
            grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        }
    }

    @media (max-width: 768px) {
        .hero-glass {
            min-height: 60vh;
            padding: var(--spacing-2xl) 0;
        }
        
        .hero-content {
            padding: var(--spacing-2xl);
            margin: 0 var(--spacing-md);
        }
        
        .content-container {
            padding: var(--spacing-2xl) var(--spacing-md);
        }
        
        .story-card,
        .mission-card {
            flex-direction: column;
            text-align: center;
            padding: var(--spacing-2xl);
            gap: var(--spacing-xl);
        }
        
        .stats-grid,
        .features-grid {
            grid-template-columns: 1fr;
            gap: var(--spacing-lg);
        }
        
        .stat-item,
        .feature-card {
            padding: var(--spacing-xl);
        }

        .stat-icon,
        .story-icon,
        .mission-icon {
            font-size: 3rem;
            padding: var(--spacing-md);
        }

        .feature-card :global(.astro-icon) {
            font-size: 2rem;
        }
    }

    @media (max-width: 480px) {
        .hero-content {
            padding: var(--spacing-xl);
            margin: 0 var(--spacing-sm);
        }

        .title-primary {
            font-size: 2.5rem;
        }
        
        .title-secondary {
            font-size: 1.5rem;
        }

        .story-card,
        .mission-card {
            padding: var(--spacing-xl);
        }

        .stat-item,
        .feature-card {
            padding: var(--spacing-lg);
        }

        .stat-number {
            font-size: 2.5rem;
        }
    }

    /* ===== ACCESIBILIDAD Y PREFERENCIAS ===== */
    @media (prefers-reduced-motion: reduce) {
        .glass-background,
        .hero-content,
        .story-section,
        .mission-section,
        .stats-section,
        .features-section,
        .stat-item,
        .feature-card,
        .animate-on-scroll,
        .title-primary {
            animation: none;
            transition: none;
        }
        
        .animate-on-scroll {
            opacity: 1;
            transform: none;
        }

        .story-card:hover,
        .mission-card:hover,
        .stat-item:hover,
        .feature-card:hover {
            transform: translateY(-4px);
        }
    }

    /* ===== PERFORMANCE OPTIMIZATIONS ===== */
    .glass-background {
        will-change: transform;
        transform: translateZ(0);
    }

    .stat-item,
    .feature-card,
    .story-card,
    .mission-card {
        will-change: transform;
    }
</style>

<script>
// ===== PREMIUM NOSOTROS EFFECTS =====

// ===== SCROLL ANIMATIONS =====
function setupScrollAnimations() {
    const animatedElements = document.querySelectorAll('.animate-on-scroll');
    
    const scrollObserver = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
            if (entry.isIntersecting) {
                entry.target.classList.add('animate');
                scrollObserver.unobserve(entry.target);
            }
        });
    }, {
        threshold: 0.1,
        rootMargin: '0px 0px -50px 0px'
    });

    animatedElements.forEach(element => {
        scrollObserver.observe(element);
    });
}

// ===== PREMIUM COUNTER ANIMATIONS =====
function setupCounterAnimations() {
    const counters = document.querySelectorAll('[data-count]');
    const animatedCounters = new Set();
    
    const counterObserver = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
            if (entry.isIntersecting && !animatedCounters.has(entry.target)) {
                animateCounter(entry.target as HTMLElement);
                animatedCounters.add(entry.target);
                counterObserver.unobserve(entry.target);
            }
        });
    }, {
        threshold: 0.5
    });

    counters.forEach(counter => {
        counterObserver.observe(counter);
    });
}

function animateCounter(element: HTMLElement) {
    const target = parseInt(element.getAttribute('data-count') || '0');
    const duration = 2500;
    const startTime = performance.now();
    
    const easeOutCubic = (t: number) => 1 - Math.pow(1 - t, 3);
    
    const updateCounter = (currentTime: number) => {
        const elapsed = currentTime - startTime;
        const progress = Math.min(elapsed / duration, 1);
        const easedProgress = easeOutCubic(progress);
        
        const current = Math.floor(easedProgress * target);
        element.textContent = current.toString();
        
        if (progress < 1) {
            requestAnimationFrame(updateCounter);
        } else {
            element.textContent = target.toString();
            // Add completion effect
            element.style.transform = 'scale(1.1)';
            setTimeout(() => {
                element.style.transform = 'scale(1)';
            }, 200);
        }
    };

    requestAnimationFrame(updateCounter);
}

// ===== HERO PARALLAX EFFECTS =====
function setupHeroParallax() {
    const hero = document.querySelector('.hero-glass') as HTMLElement | null;
    const glassBackground = document.querySelector('.glass-background') as HTMLElement | null;
    
    if (!hero || !glassBackground) return;

    let ticking = false;
    
    const handleScroll = () => {
        if (!ticking) {
            requestAnimationFrame(() => {
                const scrollY = window.scrollY;
                const heroHeight = hero.offsetHeight;
                const scrollPercent = Math.min(scrollY / heroHeight, 1);
                
                // Parallax effect for background
                const translateY = scrollY * 0.5;
                if (glassBackground) glassBackground.style.transform = `translateY(${translateY}px)`;
                
                // Opacity fade effect
                const opacity = Math.max(0.3, 1 - scrollPercent * 0.7);
                if (hero) hero.style.opacity = opacity.toString();
                
                ticking = false;
            });
            ticking = true;
        }
    };

    window.addEventListener('scroll', handleScroll, { passive: true });
}

// ===== RIPPLE EFFECTS =====
function setupRippleEffects() {
    const cards = document.querySelectorAll('.story-card, .mission-card, .stat-item, .feature-card');
    
    cards.forEach(card => {
        card.addEventListener('click', (e) => {
            createRipple(e as MouseEvent, card as HTMLElement);
        });
    });
}

function createRipple(event: MouseEvent, element: HTMLElement) {
    const rect = element.getBoundingClientRect();
    const size = Math.max(rect.width, rect.height);
    const x = event.clientX - rect.left - size / 2;
    const y = event.clientY - rect.top - size / 2;
    
    const ripple = document.createElement('span');
    ripple.className = 'ripple-effect';
    ripple.style.cssText = `
        position: absolute;
        width: ${size}px;
        height: ${size}px;
        left: ${x}px;
        top: ${y}px;
        background: radial-gradient(circle, rgba(255,107,26,0.3) 0%, transparent 70%);
        border-radius: 50%;
        transform: scale(0);
        animation: rippleAnimation 0.6s ease-out;
        pointer-events: none;
        z-index: 1;
    `;
    
    // Ensure relative positioning
    if (getComputedStyle(element).position === 'static') {
        element.style.position = 'relative';
    }
    
    element.appendChild(ripple);
    
    // Remove ripple after animation
    setTimeout(() => {
        if (ripple.parentNode) {
            ripple.parentNode.removeChild(ripple);
