---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
   title: string;
}
const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
   <head>
   	<meta charset="UTF-8" />
   	<meta name="description" content="Venta de transmisiones automáticas con hasta 12 meses de garantía en El Salvador." />
   	<meta name="viewport" content="width=device-width" />
   	<link rel="icon" type="image/svg+xml" href="/favicon.svg" />

       <link rel="preconnect" href="https://fonts.googleapis.com">
       <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
       <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;700&family=Roboto:wght@400;700&display=swap" rel="stylesheet">

   	<title>{title}</title>
   </head>
   <body>
   	<Header />
   	<slot />
   	<Footer />
   </body>
</html>
<style is:global>
    :root {
        /* --- Nueva Paleta de Colores Profesional --- */
        --color-fondo: #0F172A; /* Azul Oscuro (Slate 900) */
        --color-superficie: #1E293B; /* Azul Grisáceo (Slate 800) */
        --color-borde: #334155; /* Borde sutil (Slate 700) */
        
        --color-acento: #F97316; /* Naranja Vibrante (Orange 500) */
        --color-acento-hover: #EA580C; /* Naranja más oscuro para hover (Orange 600) */
        
        --color-texto-principal: #E2E8F0; /* Texto principal (Slate 200) */
        --color-texto-secundario: #94A3B8; /* Texto secundario (Slate 400) */

        --gradiente-acento: linear-gradient(45deg, var(--color-acento), var(--color-acento-hover));
    }
	html {
		font-family: 'Roboto', sans-serif;
		background: var(--color-fondo);
        scroll-behavior: smooth;
	}
    h1, h2, h3, h4, h5, h6 {
        font-family: 'Montserrat', sans-serif;
    }
	body {
		margin: 0;
        color: var(--color-texto-principal);
	}
    /* Estilo para un botón global */
    .btn {
        background: var(--gradiente-acento);
        color: white;
        text-decoration: none;
        padding: 0.8rem 1.5rem;
        border-radius: 8px;
        font-weight: bold;
        transition: transform 0.2s ease, box-shadow 0.2s ease;
        display: inline-block;
    }
    .btn:hover {
        transform: scale(1.05);
        box-shadow: 0 8px 15px rgba(0,0,0,0.3);
    }
</style>