---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
	title: string;
    description: string;
    image?: string;
}

const { 
    title, 
    description,
    image = '/default-social-image.png'
} = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700&family=Orbitron:wght@700;800&display=swap" rel="stylesheet">

		<title>{title}</title>
		<meta name="description" content={description} />
        <meta property="og:title" content={title} />
        <meta property="og:description" content={description} />
        <meta property="og:image" content={new URL(image, Astro.url)} />
        <meta property="og:url" content={Astro.url} />
        <meta property="og:type" content="website" />
	</head>
	<body>
		<Header />
		<slot />
		<Footer />
	</body>
</html>
<style is:global>
    :root {
        /* Paleta de Colores Refinada */
        --color-fondo: #0a0a0a; /* Negro profundo */
        --color-superficie: #1a1a1a; /* Gris casi negro */
        --color-borde: #2a2a2a;
        --color-acento: #ff8c00; /* Naranja oscuro, más elegante */
        --color-acento-hover: #ffa500;
        --color-texto-principal: #f0f0f0;
        --color-texto-secundario: #a0a0a0;
        --gradiente-acento: linear-gradient(45deg, var(--color-acento), var(--color-acento-hover));
    }
	html {
		font-family: 'Inter', sans-serif; /* Nueva fuente para el cuerpo */
		background: var(--color-fondo);
        scroll-behavior: smooth;
	}
    h1, h2, h3, h4, h5, h6 {
        font-family: 'Orbitron', sans-serif; /* Nueva fuente para títulos */
        letter-spacing: 1px;
    }
	body {
		margin: 0;
        color: var(--color-texto-principal);
	}
    .btn {
        background: var(--gradiente-acento);
        color: var(--color-fondo);
        text-decoration: none;
        padding: 0.8rem 1.5rem;
        border-radius: 8px;
        font-weight: bold;
        transition: transform 0.2s ease, box-shadow 0.2s ease;
        display: inline-block;
        border: none;
    }
    .btn:hover {
        transform: scale(1.05);
        box-shadow: 0 8px 15px rgba(0,0,0,0.3);
    }
</style>