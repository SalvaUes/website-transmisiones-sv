---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
   title: string;
}
const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
   <head>
   	<meta charset="UTF-8" />
   	<meta name="description" content="Venta de transmisiones automáticas con hasta 12 meses de garantía en El Salvador." />
   	<meta name="viewport" content="width=device-width" />
   	<link rel="icon" type="image/svg+xml" href="/favicon.svg" />

       <link rel="preconnect" href="https://fonts.googleapis.com">
       <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
       <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;700&family=Roboto:wght@400;700&display=swap" rel="stylesheet">

   	<title>{title}</title>
   </head>
   <body>
   	<Header />
   	<slot />
   	<Footer />
   </body>
</html>
<style is:global>
   :root {
       --naranja-mecanico: #F4743B;
       --gris-oscuro: #1e2128;
       --gris-claro: #333742;
       --texto-principal: #e2e8f0;
       --texto-secundario: #a0aec0;
       --fondo: #13151a;
       --naranja-gradiente: linear-gradient(45deg, #f4743b, #d86431);
   }
   html {
   	font-family: 'Roboto', sans-serif;
   	background: var(--fondo);
       scroll-behavior: smooth;
   }
   h1, h2, h3, h4, h5, h6 {
       font-family: 'Montserrat', sans-serif;
   }
   body {
   	margin: 0;
       color: var(--texto-principal);
   }
   .btn {
       background: var(--naranja-gradiente);
       color: white;
       text-decoration: none;
       padding: 0.8rem 1.5rem;
       border-radius: 8px;
       font-weight: bold;
       transition: transform 0.2s ease, box-shadow 0.2s ease;
   }
   .btn:hover {
       transform: scale(1.05);
       box-shadow: 0 8px 15px rgba(0,0,0,0.3);
   }
</style>