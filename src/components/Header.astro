    color: #ccc;
  }
  nav {
    display: flex;
    gap: 2rem;
  }
  nav a {
    text-decoration: none;
    color: #eee;
    font-weight: 500;
    transition: color 0.2s ease;
  }
  nav a:hover {
    color: #F4743B; /* Naranja Mecánico */
