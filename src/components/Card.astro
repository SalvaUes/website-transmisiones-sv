---
import { urlFor } from '../utils/sanity';
import type { Transmision } from '../types/sanity';

interface Props {
  transmision: Transmision;
}
const { transmision } = Astro.props;
const { marca, modelo, precio, condicion, slug } = transmision;
const foto = transmision.foto;
---

<a href={`/transmisiones/${slug.current}`} class="card-link">
  <div class="card">
    <div class="image-container">
      {foto && (
        <img 
          src={urlFor(foto).width(800).auto('format').quality(85).url()} 
          alt={`Foto de ${marca} ${modelo}`} 
          loading="lazy"
        />
      )}
      <div class="image-overlay"></div>
      <span class="tag">{condicion}</span>
    </div>
    <div class="card-content">
      <div>
        <h3 class="card-title">{marca} {modelo}</h3>
        <p class="card-price">${precio}</p>
      </div>
      <div class="card-footer">
        <span>Ver Detalles →</span>
      </div>
    </div>
  </div>
</a>

<style>
  .card-link {
    text-decoration: none;
    display: block;
    height: 100%;
    color: var(--color-texto-principal);
  }
  .card {
    background-color: var(--color-superficie);
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.5);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    border: 1px solid var(--color-borde);
    height: 100%;
    display: flex;
    flex-direction: column;
  }
  .card:hover {
    transform: translateY(-10px);
    box-shadow: 0 12px 30px rgba(0, 0, 0, 0.7);
    border-color: var(--color-acento);
  }
  .image-container {
    position: relative;
    height: 220px; /* Altura fija para consistencia */
  }
  .card img {
    width: 100%;
    height: 100%;
    object-fit: cover; /* Asegura que la imagen cubra el área sin deformarse */
    display: block;
    transition: transform 0.4s ease-out;
  }
  .card:hover img {
    transform: scale(1.05);
  }
  .image-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(to top, rgba(26, 26, 26, 0.8), transparent 60%);
  }
  .tag {
    position: absolute;
    top: 1rem;
    left: 1rem;
    background-color: rgba(0, 0, 0, 0.6);
    backdrop-filter: blur(5px);
    color: white;
    padding: 0.3rem 0.8rem;
    border-radius: 9999px;
    font-size: 0.8rem;
    font-weight: 500;
    text-transform: capitalize;
    border: 1px solid rgba(255, 255, 255, 0.2);
  }
  .card-content {
    padding: 1.5rem;
    flex-grow: 1;
    display: flex;
    flex-direction: column;
    justify-content: space-between; /* Alinea el contenido y el footer */
  }
  .card-title {
    font-size: 1.5rem;
    margin: 0 0 0.5rem;
    line-height: 1.2;
  }
  .card-price {
    font-family: 'Inter', sans-serif;
    font-size: 1.8rem;
    font-weight: bold;
    color: var(--color-acento);
    margin: 0;
  }
  .card-footer {
    margin-top: 1rem;
    color: var(--color-texto-secundario);
    font-weight: 500;
    align-self: flex-end;
    transition: all 0.3s ease;
  }
  .card:hover .card-footer {
    color: var(--color-acento);
    letter-spacing: 0.5px;
  }
</style>