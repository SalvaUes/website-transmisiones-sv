---
import { urlFor } from '../utils/sanity';
import { Icon } from 'astro-icon/components';
import type { Transmision } from '../types/sanity';

interface Props {
    transmision: Transmision;
}
const { transmision } = Astro.props;
const { marca, modelo, precio, condicion, slug } = transmision;
const foto = transmision.foto;
---

<a href={`/transmisiones/${slug.current}`} class="card-container">
    <article class="card">
        <div class="card-image">
            {foto && (
                <img 
                    src={urlFor(foto).width(800).auto('format').quality(85).url()} 
                    alt={`${marca} ${modelo}`}
                    loading="lazy"
                />
            )}
            <div class="card-shimmer"></div>
            <div class="card-gradient"></div>
            <span class="card-badge">{condicion}</span>
            <div class="card-overlay">
                <div class="card-hover-content">
                    <span class="hover-text">Ver Detalles</span>
                    <span class="hover-icon">→</span>
                </div>
            </div>
        </div>
        
        <div class="card-content">
            <div class="card-header">
                <h3 class="card-title">{marca} {modelo}</h3>
                {transmision.ano && (
                    <span class="card-year">{transmision.ano}</span>
                )}
            </div>
            
            <div class="card-price-section">
                <span class="price-label">Desde</span>
                <span class="card-price">${precio.toLocaleString()}</span>
                <span class="currency">USD</span>
            </div>
            
            <div class="card-features">
                {condicion === 'reconstruida' && (
                    <span class="feature-badge">
                        <Icon name="mdi:shield-check" />
                        12 meses garantía
                    </span>
                )}
                <span class="feature-badge">
                    <Icon name="mdi:truck-delivery" />
                    Envío disponible
                </span>
            </div>
        </div>
        
        <div class="card-glow"></div>
    </article>
</a>

<style>
.card-container {
    display: block;
    text-decoration: none;
    color: inherit;
    height: 100%;
}

.card {
    background: var(--color-surface);
    border: 1px solid rgba(255, 107, 0, 0.1);
    border-radius: 20px;
    overflow: hidden;
    transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    height: 100%;
    display: flex;
    flex-direction: column;
    position: relative;
}

.card:hover {
    transform: translateY(-10px) rotateX(5deg);
    box-shadow: 
        0 20px 40px rgba(255, 107, 0, 0.2),
        0 0 60px rgba(255, 107, 0, 0.1);
    border-color: var(--color-primary);
}

.card-glow {
    position: absolute;
    inset: 0;
    background: radial-gradient(
        circle at 50% 50%,
        rgba(255, 107, 0, 0.1) 0%,
        transparent 70%
    );
    opacity: 0;
    transition: opacity 0.4s ease;
    pointer-events: none;
    border-radius: 20px;
}

.card:hover .card-glow {
    opacity: 1;
}

.card-image {
    position: relative;
    aspect-ratio: 16/10;
    overflow: hidden;
}

.card-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.6s ease;
}

.card:hover .card-image img {
    transform: scale(1.1);
}

.card-shimmer {
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(
        90deg,
        transparent,
        rgba(255, 255, 255, 0.1),
        transparent
    );
    transition: left 0.6s ease;
}

.card:hover .card-shimmer {
    left: 100%;
}

.card-gradient {
    position: absolute;
    inset: 0;
    background: linear-gradient(
        180deg,
        transparent 0%,
        rgba(0, 0, 0, 0.7) 100%
    );
}

.card-badge {
    position: absolute;
    top: 1rem;
    left: 1rem;
    background: var(--gradient-primary);
    color: var(--color-background);
    padding: 0.25rem 0.75rem;
    border-radius: 20px;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    z-index: 2;
}

.card-overlay {
    position: absolute;
    inset: 0;
    background: rgba(0, 0, 0, 0.8);
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transition: opacity 0.4s ease;
}

.card:hover .card-overlay {
    opacity: 1;
}

.card-hover-content {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--color-text);
    font-weight: 600;
    transform: translateY(20px);
    transition: transform 0.4s ease;
}

.card:hover .card-hover-content {
    transform: translateY(0);
}

.hover-text {
    font-size: 1.1rem;
}

.hover-icon {
    font-size: 1.5rem;
    transition: transform 0.4s ease;
}

.card:hover .hover-icon {
    transform: translateX(5px);
}

.card-content {
    padding: 1.5rem;
    flex-grow: 1;
    display: flex;
    flex-direction: column;
    gap: 1rem;
}

.card-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
}

.card-title {
    font-size: 1.25rem;
    font-weight: 600;
    line-height: 1.3;
    color: var(--color-text);
}

.card-year {
    font-size: 0.875rem;
    color: var(--color-text-muted);
    background: rgba(255, 107, 0, 0.1);
    padding: 0.25rem 0.5rem;
    border-radius: 8px;
}

.card-price-section {
    display: flex;
    align-items: baseline;
    gap: 0.25rem;
    flex-wrap: wrap;
}

.price-label {
    font-size: 0.75rem;
    color: var(--color-text-muted);
}

.card-price {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--color-primary);
}

.currency {
    font-size: 0.875rem;
    color: var(--color-text-muted);
}

.card-features {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    margin-top: auto;
}

.feature-badge {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    background: rgba(255, 107, 0, 0.1);
    color: var(--color-primary);
    padding: 0.5rem 0.75rem;
    border-radius: 20px;
    font-size: 0.75rem;
    font-weight: 500;
    transition: background 0.3s ease;
}

.feature-badge:hover {
    background: rgba(255, 107, 0, 0.2);
}

.feature-badge :global(.astro-icon) {
    font-size: 1rem;
}

@media (max-width: 768px) {
    .card {
        border-radius: 16px;
    }
    
    .card-content {
        padding: 1.25rem;
    }
    
    .card-title {
        font-size: 1.125rem;
    }
}
</style>