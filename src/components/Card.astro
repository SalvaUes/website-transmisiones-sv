---
import { urlFor } from '../utils/sanity';
import { Icon } from 'astro-icon/components';
import type { Transmision } from '../types/sanity';

interface Props {
    transmision: Transmision;
}

const { transmision } = Astro.props;
const { marca, modelo, precio, condicion, slug, ano } = transmision ?? {} as Transmision;
const foto = transmision?.foto;

// Optimized price formatter for consistency and clarity
const formatPrice = (price: unknown): string => {
    if (price === null || price === undefined) {
        return '—';
    }
    // Sanitize input to extract only numbers and a decimal point
    const numericPrice = Number(String(price).replace(/[^0-9.]+/g, ''));

    if (!Number.isFinite(numericPrice)) {
        return 'Consultar'; // Return a clear fallback for non-numeric values
    }

    // Use a specific locale for consistent formatting
    return numericPrice.toLocaleString('es-SV', {
        minimumFractionDigits: 0,
        maximumFractionDigits: 2,
    });
};
---

<a href={`/transmisiones/${slug.current}`} class="card-container">
    <article class="card">
        <div class="card-image">
            {foto && (
                <img 
                    src={urlFor(foto).width(800).auto('format').quality(85).url()} 
                    srcset={`${urlFor(foto).width(400).auto('format').quality(80).url()} 400w, ${urlFor(foto).width(800).auto('format').quality(85).url()} 800w, ${urlFor(foto).width(1200).auto('format').quality(75).url()} 1200w`}
                    sizes="(max-width: 768px) 100vw, (max-width: 1200px) 48vw, 33vw"
                    alt={`${marca} ${modelo}`}
                    loading="lazy"
                />
            )}
            <div class="card-shimmer"></div>
            <div class="card-gradient"></div>
            <span class="card-badge">{condicion}</span>
            <div class="card-overlay">
                <div class="card-hover-content">
                    <span class="hover-text">Ver Detalles</span>
                    <span class="hover-icon">→</span>
                </div>
            </div>
        </div>
        
        <div class="card-content">
            <div class="card-header">
                <h3 class="card-title">{marca} {modelo}</h3>
                {transmision.ano && (
                    <span class="card-year">{transmision.ano}</span>
                )}
            </div>
            
            <div class="card-price-section">
                <span class="price-label">Desde</span>
                <span class="card-price">{formatPrice(precio)}</span>
                <span class="currency">USD</span>
            </div>
            
            <div class="card-features">
                {condicion === 'reconstruida' && (
                    <span class="feature-badge">
                        <Icon name="mdi:shield-check" />
                        12 meses garantía
                    </span>
                )}
                <span class="feature-badge">
                    <Icon name="mdi:truck-delivery" />
                    Envío disponible
                </span>
            </div>
        </div>
        
        <div class="card-glow"></div>
    </article>
</a>

<style>
    /* ===== CARD PREMIUM STYLE ===== */
    .card-container {
        display: block;
        text-decoration: none;
        color: inherit;
        height: 100%;
        transform-style: preserve-3d;
        perspective: 1000px;
    }

    .card {
        background: linear-gradient(135deg, 
            var(--glass-strong) 0%, 
            var(--glass-medium) 50%, 
            var(--glass-light) 100%);
        backdrop-filter: blur(20px) saturate(1.3);
        -webkit-backdrop-filter: blur(20px) saturate(1.3);
        border: 1px solid var(--glass-border);
        border-radius: var(--radius-2xl);
        overflow: hidden;
        transition: all var(--motion-medium) var(--ease-out);
        transform-origin: center;
        box-shadow: var(--shadow-lg);
        height: 100%;
        display: flex;
        flex-direction: column;
        position: relative;
        cursor: pointer;
    }

    .card::before {
        content: '';
        position: absolute;
        inset: 0;
        background: linear-gradient(135deg, 
            rgba(255,107,26,0.1) 0%, 
            transparent 50%, 
            rgba(0,212,255,0.05) 100%);
        opacity: 0;
        transition: opacity var(--motion-medium) var(--ease-out);
        border-radius: var(--radius-2xl);
        z-index: 1;
        pointer-events: none;
    }

    .card:hover {
        transform: translateY(-12px) scale(1.03);
        box-shadow: 
            var(--shadow-2xl), 
            var(--glow-primary),
            0 0 40px rgba(255,107,26,0.2),
            0 0 80px rgba(255,107,26,0.1);
        border-color: var(--border-accent);
    }

    .card:hover::before {
        opacity: 1;
    }

    .card:active {
        transform: translateY(-8px) scale(1.01);
        transition-duration: var(--motion-fast);
    }

    .card-glow {
        position: absolute;
        inset: 0;
        background: radial-gradient(circle at 50% 50%, 
            rgba(255,107,26,0.15) 0%, 
            rgba(0,212,255,0.08) 40%,
            transparent 70%);
        opacity: 0;
        transition: opacity var(--motion-medium) var(--ease-out);
        pointer-events: none;
        border-radius: var(--radius-2xl);
        z-index: 2;
    }

    .card:hover .card-glow { 
        opacity: 1; 
        animation: glowPulse 2s ease-in-out infinite;
    }

    @keyframes glowPulse {
        0%, 100% { opacity: 1; }
        50% { opacity: 0.7; }
    }

    /* ===== IMAGE SECTION PREMIUM ===== */
    .card-image {
        position: relative;
        aspect-ratio: 16/10;
        overflow: hidden;
        background: linear-gradient(135deg, 
            var(--bg-700) 0%, 
            var(--bg-600) 100%);
        z-index: 3;
    }

    .card-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: all var(--motion-slow) var(--ease-out);
        filter: brightness(0.9) contrast(1.1) saturate(1.1);
    }

    .card:hover .card-image img {
        transform: scale(1.08) rotate(0.5deg);
        filter: brightness(1.1) contrast(1.2) saturate(1.3);
    }

    .card-shimmer {
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(
            90deg,
            transparent,
            rgba(255, 255, 255, 0.2),
            rgba(255,107,26,0.1),
            rgba(255, 255, 255, 0.2),
            transparent
        );
        transition: left var(--motion-ultra-slow) var(--ease-out);
        z-index: 4;
    }

    .card:hover .card-shimmer {
        left: 100%;
    }

    .card-gradient {
        position: absolute;
        inset: 0;
        background: linear-gradient(
            180deg,
            transparent 0%,
            rgba(10,14,20,0.2) 40%,
            rgba(10,14,20,0.6) 80%,
            rgba(10,14,20,0.9) 100%
        );
        z-index: 3;
    }

    .card-badge {
        position: absolute;
        top: var(--spacing-lg);
        left: var(--spacing-lg);
        background: var(--gradient-primary);
        color: var(--text-primary);
        padding: var(--spacing-sm) var(--spacing-lg);
        border-radius: var(--radius-2xl);
        font-size: 0.75rem;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        box-shadow: var(--shadow-md), var(--glow-primary);
        backdrop-filter: blur(12px);
        z-index: 5;
        transform: translateY(0);
        transition: all var(--motion-medium) var(--ease-out);
        border: 1px solid rgba(255,255,255,0.1);
    }

    .card:hover .card-badge {
        transform: translateY(-4px) scale(1.05);
        box-shadow: var(--shadow-lg), var(--glow-primary);
    }

    .card-overlay {
        position: absolute;
        inset: 0;
        background: linear-gradient(135deg, 
            rgba(255,107,26,0.95) 0%, 
            rgba(255,107,26,0.8) 30%,
            rgba(0,212,255,0.8) 70%,
            rgba(0,212,255,0.95) 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        opacity: 0;
        transition: all var(--motion-medium) var(--ease-out);
        backdrop-filter: blur(8px);
        z-index: 6;
    }

    .card:hover .card-overlay {
        opacity: 1;
    }

    .card-hover-content {
        display: flex;
        align-items: center;
        gap: var(--spacing-md);
        color: var(--text-primary);
        font-weight: 700;
        transform: translateY(30px) scale(0.8);
        transition: all var(--motion-medium) var(--ease-bounce);
        text-shadow: 0 4px 12px rgba(0,0,0,0.5);
        text-align: center;
        flex-direction: column;
    }

    .card:hover .card-hover-content {
        transform: translateY(0) scale(1);
    }

    .hover-text {
        font-size: 1.2rem;
        letter-spacing: 0.1em;
        text-transform: uppercase;
        font-family: 'Orbitron', sans-serif;
    }

    .hover-icon {
        font-size: 2rem;
        transition: transform var(--motion-medium) var(--ease-bounce);
        animation: bounceX 1s ease-in-out infinite;
    }

    @keyframes bounceX {
        0%, 100% { transform: translateX(0); }
        50% { transform: translateX(8px); }
    }

    /* ===== CONTENT SECTION PREMIUM ===== */
    .card-content {
        padding: var(--spacing-2xl);
        flex-grow: 1;
        display: flex;
        flex-direction: column;
        gap: var(--spacing-lg);
        background: linear-gradient(180deg, 
            transparent 0%, 
            var(--glass-light) 30%,
            var(--glass-medium) 100%);
        backdrop-filter: blur(12px);
        z-index: 3;
        position: relative;
    }

    .card-content::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 1px;
        background: var(--gradient-primary);
        opacity: 0.3;
    }

    .card-header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        gap: var(--spacing-md);
    }

    .card-title {
        font-size: 1.3rem;
        font-weight: 700;
        line-height: 1.2;
        color: var(--text-primary);
        font-family: 'Orbitron', sans-serif;
        letter-spacing: -0.01em;
        background: linear-gradient(135deg, 
            var(--text-primary) 0%, 
            var(--primary-light) 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        transition: all var(--motion-medium) var(--ease-out);
        flex: 1;
    }

    .card:hover .card-title {
        text-shadow: var(--glow-primary);
        transform: translateX(2px);
    }

    .card-year {
        font-size: 0.875rem;
        color: var(--text-muted);
        background: var(--glass-strong);
        border: 1px solid var(--glass-border);
        padding: var(--spacing-sm) var(--spacing-md);
        border-radius: var(--radius-lg);
        backdrop-filter: blur(16px);
        font-weight: 600;
        white-space: nowrap;
        transition: all var(--motion-medium) var(--ease-out);
        box-shadow: var(--shadow-sm);
    }

    .card:hover .card-year {
        background: var(--glass-medium);
        border-color: var(--primary);
        color: var(--primary);
        transform: scale(1.05);
        box-shadow: var(--shadow-md), var(--glow-primary);
    }

    .card-price-section {
        display: flex;
        align-items: baseline;
        gap: var(--spacing-sm);
        flex-wrap: wrap;
        padding: var(--spacing-lg);
        background: var(--glass-medium);
        border-radius: var(--radius-lg);
        border: 1px solid var(--glass-border);
        backdrop-filter: blur(16px);
        transition: all var(--motion-medium) var(--ease-out);
    }

    .card:hover .card-price-section {
        background: var(--glass-strong);
        border-color: var(--primary);
        box-shadow: var(--shadow-md), var(--glow-primary);
        transform: scale(1.02);
    }

    .price-label {
        font-size: 0.75rem;
        color: var(--text-muted);
        text-transform: uppercase;
        letter-spacing: 0.1em;
        font-weight: 600;
    }

    .card-price {
        font-size: 1.8rem;
        font-weight: 800;
        color: var(--primary);
        font-family: 'Orbitron', sans-serif;
        text-shadow: var(--glow-primary);
        letter-spacing: -0.02em;
        transition: all var(--motion-medium) var(--ease-out);
    }

    .card:hover .card-price {
        color: var(--primary-light);
        text-shadow: var(--glow-primary), 0 0 20px rgba(255,107,26,0.5);
        transform: scale(1.05);
    }

    .currency {
        font-size: 0.875rem;
        color: var(--text-muted);
        font-weight: 700;
        opacity: 0.8;
    }

    .card-features {
        display: flex;
        flex-direction: column;
        gap: var(--spacing-md);
        margin-top: auto;
    }

    .feature-badge {
        display: flex;
        align-items: center;
        gap: var(--spacing-sm);
        background: var(--glass-light);
        border: 1px solid var(--glass-border);
        color: var(--text-secondary);
        padding: var(--spacing-md) var(--spacing-lg);
        border-radius: var(--radius-xl);
        font-size: 0.8rem;
        font-weight: 600;
        transition: all var(--motion-medium) var(--ease-out);
        backdrop-filter: blur(12px);
        text-transform: uppercase;
        letter-spacing: 0.05em;
        position: relative;
        overflow: hidden;
    }

    .feature-badge::before {
        content: '';
        position: absolute;
        inset: 0;
        background: var(--gradient-primary);
        opacity: 0;
        transition: opacity var(--motion-medium) var(--ease-out);
        z-index: -1;
    }

    .feature-badge:hover {
        background: var(--glass-strong);
        border-color: var(--primary);
        color: var(--text-primary);
        box-shadow: var(--shadow-md), var(--glow-primary);
        transform: translateX(4px) scale(1.02);
    }

    .feature-badge:hover::before {
        opacity: 0.1;
    }

    .feature-badge :global(.astro-icon) {
        font-size: 1.1rem;
        color: var(--primary);
        transition: all var(--motion-medium) var(--ease-out);
    }

    .feature-badge:hover :global(.astro-icon) {
        color: var(--primary-light);
        transform: scale(1.1);
    }

    /* ===== RESPONSIVE OPTIMIZATIONS ===== */
    @media (max-width: 768px) {
        .card {
            border-radius: var(--radius-xl);
        }
        
        .card-content {
            padding: var(--spacing-xl);
            gap: var(--spacing-md);
        }
        
        .card-title {
            font-size: 1.15rem;
        }
        
        .card-price {
            font-size: 1.5rem;
        }
        
        .card-price-section {
            padding: var(--spacing-md);
        }
        
        .feature-badge {
            font-size: 0.75rem;
            padding: var(--spacing-sm) var(--spacing-md);
        }

        .card:hover {
            transform: translateY(-8px) scale(1.01);
        }
    }

    @media (max-width: 480px) {
        .card-content {
            padding: var(--spacing-lg);
        }
        
        .card-title {
            font-size: 1.1rem;
        }
        
        .card-price {
            font-size: 1.4rem;
        }

        .card-header {
            flex-direction: column;
            align-items: flex-start;
            gap: var(--spacing-sm);
        }

        .card-year {
            align-self: flex-end;
        }
    }

    /* ===== ACCESIBILIDAD Y PREFERENCIAS ===== */
    @media (prefers-reduced-motion: reduce) {
        .card,
        .card-image img,
        .card-shimmer,
        .card-badge,
        .card-overlay,
        .card-hover-content,
        .hover-icon,
        .card-title,
        .card-year,
        .card-price-section,
        .card-price,
        .feature-badge {
            transition: none;
            animation: none;
        }
        
        .card:hover {
            transform: translateY(-4px);
        }
    }

    /* ===== FOCUS STATES PREMIUM ===== */
    .card-container:focus-visible .card {
        outline: 2px solid var(--primary);
        outline-offset: 4px;
        box-shadow: 
            var(--shadow-xl), 
            var(--glow-primary),
            0 0 0 4px rgba(255,107,26,0.3);
    }

    /* ===== ESTADOS DE CARGA ===== */
    .card-image:empty {
        background: linear-gradient(135deg, 
            var(--bg-700) 0%, 
            var(--bg-600) 50%,
            var(--bg-700) 100%);
        background-size: 200% 100%;
        animation: shimmerLoad 2s ease-in-out infinite;
    }

    @keyframes shimmerLoad {
        0%, 100% { background-position: 200% 0; }
        50% { background-position: -200% 0; }
    }
</style>