---
import { Icon } from 'astro-icon/components';
import { client } from '../utils/sanityClient';

// Pedimos a Sanity la única entrada de tipo "ajustes"
const ajustes = await client.fetch(`*[_type == "ajustes"][0]`);
const year = new Date().getFullYear();
---
<footer>
  <div class="container">
    <p>&copy; {year} Transmisiones Automáticas SV. Todos los derechos reservados.</p>
    
    <div class="social-links">
      {ajustes?.facebookUrl && (
        <a href={ajustes.facebookUrl} target="_blank" rel="noopener noreferrer" aria-label="Facebook">
          <Icon name="mdi:facebook" size="1.5em" />
        </a>
      )}
      {ajustes?.instagramUrl && (
        <a href={ajustes.instagramUrl} target="_blank" rel="noopener noreferrer" aria-label="Instagram">
          <Icon name="mdi:instagram" size="1.5em" />
        </a>
      )}
      {ajustes?.whatsappUrl && (
        <a href={ajustes.whatsappUrl} target="_blank" rel="noopener noreferrer" aria-label="WhatsApp">
          <Icon name="mdi:whatsapp" size="1.5em" />
        </a>
      )}
    </div>

  </div>
</footer>

<style>
  footer {
    background-color: var(--color-superficie);
    border-top: 1px solid var(--color-borde);
    padding: 2rem 1rem;
    color: var(--color-texto-secundario);
    margin-top: 5rem;
  }
  .container {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 1rem;
  }
  .social-links {
    display: flex;
    gap: 1.5rem;
  }
  .social-links a {
    color: var(--color-texto-secundario);
    text-decoration: none;
    font-size: 1.5rem;
    transition: color 0.3s ease, transform 0.3s ease;
  }
  .social-links a:hover {
    color: var(--color-acento);
    transform: scale(1.1);
  }
  @media (max-width: 600px) {
    .container {
      flex-direction: column;
      align-items: center;
      text-align: center;
    }
    .social-links {
      margin-top: 1rem;
    }
  }
</style>